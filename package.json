{
  "name": "More-Recipes",
  "version": "1.0.1",
  "description": "More Recipes; A Recipe management and social app",
  "scripts": {
    "clean": "rm -rf ./production",
    "build:server": "mkdir ./production && babel ./server/ -d ./production --copy-files",
    "build:client": "NODE_ENV=production webpack --config ./webpack_configs/webpack.prod.js --progress",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "start": "npm run build && NODE_ENV=production node ./production/bin/www.js",
    "devstart": "nodemon ./server/bin/www --exec babel-node",
    "start:client": "babel-node ./server/bin/www",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text --reporter=lcov mocha ./server/tests --exit --require babel-register --timeout=40000",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": "8.6.0",
    "npm": "5.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idrisadetunmbi/More-Recipes.git"
  },
  "keywords": [
    "Andela",
    "More-Recipe",
    "Javascript"
  ],
  "author": "Idris Adetunmbi",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-stage-1": "^6.24.1",
    "bcrypt": "^1.0.3",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "deep-equal": "^1.0.1",
    "dotenv": "^4.0.0",
    "dotenv-webpack": "^1.5.4",
    "express": "~4.15.5",
    "express-jwt": "^5.3.0",
    "express-validator": "^4.3.0",
    "history": "^4.7.2",
    "jsonwebtoken": "^8.1.0",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "sequelize": "^4.21.0",
    "swagger-ui-express": "^2.0.10",
    "uuid": "^3.1.0",
    "validator": "^9.1.2"
