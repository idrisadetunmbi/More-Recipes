{
  "name": "More-Recipes",
  "version": "1.0.0",
  "description": "More Recipes; A Recipe management and social app",
  "scripts": {
    "clean": "rm -rf ./production",
    "install:babel": "npm install --save babel-cli babel-preset-env babel-preset-stage-1",
    "build": "npm run install:babel && npm run clean && mkdir ./production && babel ./server/ -d ./production && cd ./production && mkdir seeders && cp ../server/seeders/recipes.json ./seeders/",
    "start": "npm run build && node ./production/bin/www.js",
    "devstart": "nodemon ./server/bin/www --exec babel-node",
    "test": "NODE_ENV=test mocha ./server/tests --exit --compilers js:babel-register"
  },
  "engines": {
    "node": "8.6.0",
    "npm": "5.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idrisadetunmbi/More-Recipes.git"
  },
  "keywords": [
    "Andela",
    "More-Recipe",
    "Javascript"
  ],
  "author": "Idris Adetunmbi",
  "license": "ISC",
  "dependencies": {
    "body-parser": "~1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "express-validator": "^4.2.1",
    "mocha": "^4.0.1",
    "morgan": "~1.9.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "nodemon": "^1.12.1"
  }
}